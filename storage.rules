rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload images
    match /appointments/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow public read for before/after images
    match /before-after/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}