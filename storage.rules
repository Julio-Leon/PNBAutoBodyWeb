rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isStaff() {
      return isAuthenticated() && 
             (request.auth.token.role == 'staff' || request.auth.token.role == 'admin');
    }
    
    function isValidImageFile() {
      return resource.contentType.matches('image/.*') &&
             resource.size < 10 * 1024 * 1024; // 10MB limit
    }

    // Appointment images - anyone can upload, staff can manage
    match /appointments/{appointmentId}/{allPaths=**} {
      // Allow anyone to upload images for appointments
      allow create: if request.resource.contentType.matches('image/.*') &&
                       request.resource.size < 10 * 1024 * 1024;
      
      // Allow read access to appointment images for staff
      allow read: if isStaff();
      
      // Allow delete for staff only
      allow delete: if isStaff();
    }
    
    // Gallery images - public read, staff write
    match /gallery/{imageId} {
      allow read: if true;
      allow write, delete: if isStaff() && isValidImageFile();
    }
    
    // Service images - public read, staff write
    match /services/{serviceId}/{imageId} {
      allow read: if true;
      allow write, delete: if isStaff() && isValidImageFile();
    }
    
    // Before/after images - public read, staff write
    match /before-after/{imageId} {
      allow read: if true;
      allow write, delete: if isStaff() && isValidImageFile();
    }
    
    // User profile images
    match /users/{userId}/profile/{imageId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      allow read: if isStaff();
      allow delete: if isStaff();
    }
    
    // Business documents and images - staff only
    match /business/{allPaths=**} {
      allow read, write: if isStaff();
    }
  }
}
