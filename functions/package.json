{
  "name": "pnb-auto-body-functions",
  "version": "1.0.0",
  "description": "Firebase Functions for PNB Auto Body",
  "main": "index.js",
  "scripts": {
    "build": "npm run copy-files",
    "copy-files": "cp -r ../pnb-server/src ./src && cp ../pnb-server/server.js ./server.js && cp ../pnb-server/package.json ./server-package.json",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "18"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "eslint": "^9.33.0",
    "firebase-functions-test": "^3.1.0"
  },
  "private": true
}
