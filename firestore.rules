rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions for authentication and authorization
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.role == 'admin';
    }
    
    function isStaff() {
      return isAuthenticated() && 
             (request.auth.token.role == 'staff' || request.auth.token.role == 'admin');
    }
    
    function isOwnerOrStaff(userId) {
      return isAuthenticated() && 
             (request.auth.uid == userId || isStaff());
    }

    // Appointments collection
    match /appointments/{appointmentId} {
      // Allow anyone to create appointments (for public appointment form)
      allow create: if true;
      
      // Allow read/update/delete for:
      // - The appointment owner (if they have an account)
      // - Staff and admin users
      allow read, update: if isOwnerOrStaff(resource.data.userId) || 
                             resource.data.email == request.auth.token.email;
      
      // Only staff and admin can delete appointments
      allow delete: if isStaff();
      
      // Staff and admin can read all appointments
      allow read: if isStaff();
    }
    
    // Users collection (if you decide to add user profiles later)
    match /users/{userId} {
      // Users can read and write their own profile
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      
      // Staff and admin can read all user profiles
      allow read: if isStaff();
      
      // Only admin can modify other users' profiles
      allow write: if isAdmin();
    }
    
    // Admin-only collections
    match /settings/{document=**} {
      allow read, write: if isAdmin();
    }
    
    match /analytics/{document=**} {
      allow read, write: if isStaff();
    }
    
    // Public read-only collections (for website content)
    match /services/{document=**} {
      allow read: if true;
      allow write: if isStaff();
    }
    
    match /gallery/{document=**} {
      allow read: if true;
      allow write: if isStaff();
    }
    
    match /testimonials/{document=**} {
      allow read: if true;
      allow write: if isStaff();
    }
    
    // Business hours, contact info, etc.
    match /business_info/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
